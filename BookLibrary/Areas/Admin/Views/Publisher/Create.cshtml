@model BookLibrary.Models.Publisher

<h1>Dodaj izdavača</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublisherName" class="control-label"></label>
                <input asp-for="PublisherName" class="form-control" />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            <p>
                <div class="form-group">
                    <input type="submit" value="Kreiraj" class="btn btn-success" />
                </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-action="Index">Povratak na popis izdavača</a>
</div>